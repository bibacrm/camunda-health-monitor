# Database Configuration (PostgreSQL)
DB_NAME=camunda
DB_USER=camunda
DB_PASSWORD=camunda
# For Docker: Use 'host.docker.internal' instead of 'localhost' to connect to host PostgreSQL located on same machine
# For direct Python run: Use 'localhost'
DB_HOST=localhost
DB_PORT=5432

# Camunda Node 1 (Required)
CAMUNDA_NODE_1_NAME=node1
CAMUNDA_NODE_1_URL=http://localhost:8080/engine-rest

# Camunda Node 2
CAMUNDA_NODE_2_NAME=node2
CAMUNDA_NODE_2_URL=http://localhost:8081/engine-rest

# Camunda Node 3 (Optional)
# CAMUNDA_NODE_3_NAME=node3
# CAMUNDA_NODE_3_URL=http://localhost:8082/engine-rest

# Camunda API Authentication (if enabled on your Camunda instance)
# Leave empty if no authentication required
CAMUNDA_API_USER=
CAMUNDA_API_PASSWORD=

# Optional: JMX Exporter Endpoints for Advanced JVM Metrics
# Requires JMX Exporter to be configured on your Camunda nodes
JMX_NODE_1_URL=http://localhost:8080/metrics
JMX_NODE_2_URL=http://localhost:8081/metrics

# JVM Metrics Source: 'jmx' (default) or 'micrometer' (for Quarkus-based deployments)
JVM_METRICS_SOURCE=jmx

# Stuck Instance Detection Threshold (in days)
# Instances with no activity for this period will be flagged as stuck
STUCK_INSTANCE_DAYS=7

# AI/ML Configuration - Consolidated & Simplified
# =================================================

# Analysis Time Window
# --------------------
# How many days back to analyze for all AI insights (default: 30)
AI_LOOKBACK_DAYS=30

# Query Limits
# ------------
# Maximum instances to fetch for AI analysis - process, activity, job instances (default: 50000)
AI_MAX_INSTANCES=50000
# Maximum incidents to fetch for pattern recognition (default: 1000)
AI_MAX_INCIDENTS=1000

# Minimum Data Requirements
# --------------------------
# Minimum data points needed for AI analysis - instances, executions, etc. (default: 10)
AI_MIN_DATA=10

# Detection Thresholds
# --------------------
# Z-score threshold for statistical anomaly detection (lower = more sensitive, typical: 0.5-2.0)
AI_ZSCORE_THRESHOLD=1.0
# Maximum execution time in seconds to flag as critical stuck process (default: 86400 = 1 day)
AI_CRITICAL_DURATION_SECONDS=86400
# Maximum execution time in seconds to flag as high severity (default: 7200 = 2 hours)
AI_HIGH_DURATION_SECONDS=7200
# Maximum execution time in seconds to flag as medium severity (default: 3600 = 1 hour)
AI_MEDIUM_DURATION_SECONDS=3600
# Average execution time in seconds to flag as slow (default: 600 = 10 minutes)
AI_SLOW_AVG_DURATION_SECONDS=600

# SLA Configuration
# -----------------
# SLA threshold for predicting task deadline breaches (in hours)
SLA_THRESHOLD_HOURS=24
# Percentage of SLA threshold to start flagging tasks as at-risk (70 = flag at 70% of SLA)
SLA_WARNING_THRESHOLD_PCT=70

# Result Limits (UI Display)
# ---------------------------
# Maximum number of results to return in API responses and display in UI (default: 20)
AI_UI_RESULTS_LIMIT=20

# Advanced ML Features
# --------------------
# Capacity forecasting: days to forecast ahead (default: 30)
AI_CAPACITY_FORECAST_DAYS=30
# Capacity forecasting: training data window in days (default: 90)
AI_CAPACITY_TRAINING_DAYS=90
# Variable impact: minimum impact percentage to report (default: 10)
AI_MIN_VARIABLE_IMPACT_PCT=10
# Stuck activity: percentile threshold for stuck detection (default: 95)
AI_STUCK_ACTIVITY_PERCENTILE=95
# Stuck activity: multiplier for stuck threshold - activity > P95 * multiplier (default: 2.0)
AI_STUCK_ACTIVITY_MULTIPLIER=2.0
# Duration prediction: minimum confidence level to show predictions (default: 0.7)
AI_DURATION_PREDICTION_MIN_CONFIDENCE=0.7
# Duration prediction: minimum training instances needed (default: 50)
AI_DURATION_PREDICTION_MIN_TRAINING=50

# UI/Frontend Configuration
# --------------------------
# Auto-refresh interval in milliseconds (default: 30 seconds)
UI_AUTO_REFRESH_INTERVAL_MS=30000
# Archive threshold in days - instances older than this are considered archivable (default: 90)
DB_ARCHIVE_THRESHOLD_DAYS=90

# Application Configuration
PORT=5000
DEBUG=false
JSON_LOGGING=false

# SSL Certificate Verification
# Set to 'true' to enable SSL certificate verification (recommended for production with valid certificates)
# Set to 'false' to disable SSL verification (useful for self-signed certificates in development/testing)
SSL_VERIFY=false
